<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.page.frags.ChangePassword">



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18" />




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_forum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_gl_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_gl_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>









    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="Changer\nle mot de passe"
        android:textColor="@color/baseGreen"
        android:lineSpacingExtra="12dp"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/guide_txtview" />






    <TextView
        android:id="@+id/ancien_password_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sans"
        android:text="ancien mot de passe"
        android:textColor="@color/baseRed"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/top_forum" />


    <EditText
        android:id="@+id/ancien_password_field"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_edit"
        android:drawableStart="@drawable/custom_lock_ic"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Tapez votre ancien mot de passe"
        android:inputType="textPassword"
        android:paddingHorizontal="14dp"
        android:textColor="@color/custom_black"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/guide_end"
        app:layout_constraintStart_toEndOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/ancien_password_view" />



    <TextView
        android:id="@+id/nouveau_password_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sans"
        android:text="nouveau password"
        android:textColor="@color/baseRed"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/ancien_password_field" />

    <EditText
        android:id="@+id/nouveau_password_field"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_edit"
        android:drawableStart="@drawable/custom_lock_ic"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Tapez votre nouveau mot de passe"
        android:inputType="textPassword"
        android:paddingHorizontal="14dp"
        android:textColor="@color/custom_black"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/guide_end"
        app:layout_constraintStart_toEndOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/nouveau_password_view" />


    <TextView
        android:id="@+id/retaper_password_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sans"
        android:text="retaper nouveau password"
        android:textColor="@color/baseRed"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/nouveau_password_field" />



    <EditText
        android:id="@+id/retaper_password_field"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_edit"
        android:drawableStart="@drawable/custom_retype_ic"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Re-tapez nouveau mot de passe"
        android:inputType="textPassword"
        android:paddingHorizontal="14dp"
        android:textColor="@color/custom_black"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/guide_end"
        app:layout_constraintStart_toEndOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/retaper_password_view" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/modifyButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@id/end_gl_btn"
        app:layout_constraintStart_toEndOf="@id/start_gl_btn"
        app:layout_constraintTop_toBottomOf="@id/retaper_password_field"
        android:animateLayoutChanges="true"
        android:background="@drawable/signin_btn_selector"
        android:elevation="5dp">
        <TextView
            android:id="@+id/reinitialisationTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifier"
            android:textSize="17sp"
            android:animateLayoutChanges="true"
            android:fontFamily="@font/aldrich"
            android:textColor="@color/special_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/progressbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="14.5dp"
            android:layout_height="14.5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="26dp"
            android:visibility="gone"
            android:animateLayoutChanges="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/myCustomWhite2"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>