<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".home.page.frags.Informations">




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/textview_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.88"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/roadMark1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.49"
        android:orientation="horizontal"/>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/route1_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.24"
        android:orientation="vertical"/>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/route1_2_horizental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.42"
        android:orientation="horizontal"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/route4_3_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/route4_3_vertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.3"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/route3_horizental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.24"
        android:orientation="horizontal"/>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/route4_horizental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.71"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/route2_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.76"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topTitle_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="horizontal"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="8dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/home_profileshape"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/topTitle_guide">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/green_settings"
        android:fontFamily="@font/alegreya_sans"
        android:text="@string/informations_sur_les_embouteillages"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/green_settings"
        android:text=""
        android:fontFamily="@font/alegreya_sans"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>




    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/intersection5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/green_settings"
        tools:ignore="contentDescription" />



    <LinearLayout
        android:id="@+id/route1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toTopOf="@id/route1_2_horizental"
        app:layout_constraintEnd_toEndOf="@id/route1_vertical"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/logo_layout1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:animateLayoutChanges="true"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/car_route1"
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/car"
            app:tint="@color/chartGreen2"
            tools:ignore="contentDescription" />

        <TextView
            android:id="@+id/count_route1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/chartGreen2"
            android:text="X 0"/>

    </LinearLayout>

        <TextView
            android:id="@+id/route1_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/chartGreen2"
            android:includeFontPadding="false"
            android:textSize="10sp"
            android:text="Route 1"
            tools:ignore="SmallSp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/route2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/route2_vertical"
        app:layout_constraintBottom_toTopOf="@id/route1_2_horizental"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/logo_layout2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:animateLayoutChanges="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/car_route2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/car"
                android:layout_marginEnd="8dp"
                tools:ignore="contentDescription"
                app:tint="@color/chartGreen2" />

            <TextView
                android:id="@+id/count_route2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/chartGreen2"
                android:text="X 0"/>

        </LinearLayout>

        <TextView
            android:id="@+id/route2_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/chartGreen2"
            android:includeFontPadding="false"
            android:textSize="10sp"
            android:text="Route 2"
            tools:ignore="SmallSp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/route4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/route4_horizental"
        app:layout_constraintEnd_toEndOf="@id/route4_3_vertical"
        app:layout_constraintStart_toEndOf="@+id/route4_3_vertical2"
        android:animateLayoutChanges="true"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/logo_layout4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:animateLayoutChanges="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/car_route4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/car"
                android:layout_marginEnd="8dp"
                tools:ignore="contentDescription"
                app:tint="@color/chartGreen2" />

            <TextView
                android:id="@+id/count_route4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/chartGreen2"
                android:text="X 0"/>

        </LinearLayout>

        <TextView
            android:id="@+id/route4_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/chartGreen2"
            android:includeFontPadding="false"
            android:textSize="10sp"
            android:text="Route 4"
            tools:ignore="SmallSp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/route3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:animateLayoutChanges="true"
        app:layout_constraintEnd_toStartOf="@id/route4_3_vertical"
        app:layout_constraintBottom_toTopOf="@id/route3_horizental"
        app:layout_constraintStart_toEndOf="@+id/route4_3_vertical2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/logo_layout3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:animateLayoutChanges="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/car_route3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/car"
                android:layout_marginEnd="8dp"
                tools:ignore="contentDescription"
                app:tint="@color/chartGreen2" />

            <TextView
                android:id="@+id/count_route3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/chartGreen2"
                android:text="X 0"/>

        </LinearLayout>

        <TextView
            android:id="@+id/route3_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/chartGreen2"
            android:includeFontPadding="false"
            android:textSize="10sp"
            android:text="Route 3"
            tools:ignore="SmallSp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/carMark1"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toStartOf="@id/route4_3_vertical2"
        app:layout_constraintBottom_toTopOf="@id/roadMark1"
        android:animateLayoutChanges="true"
        app:layout_constraintStart_toStartOf="parent">
    <ImageView
        android:id="@+id/ic_mark1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/car_mark"
        android:visibility="invisible"
        app:tint="@color/color_marker" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/carMark2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/roadMark1"
        app:layout_constraintStart_toEndOf="@id/route4_3_vertical"
        android:animateLayoutChanges="true"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/ic_mark2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/car_mark"
            android:visibility="invisible"
            app:tint="@color/color_marker" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/carMark4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/route4_horizental"
        app:layout_constraintStart_toStartOf="@id/route4_3_vertical2"
        app:layout_constraintEnd_toStartOf="@id/route4_3_vertical"
        android:animateLayoutChanges="true"
        android:layout_marginBottom="18sp">
        <ImageView
            android:id="@+id/ic_mark4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/car_mark"
            android:visibility="invisible"
            app:tint="@color/color_marker" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/carMark3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="@id/route4_3_vertical2"
        app:layout_constraintEnd_toStartOf="@id/route4_3_vertical"
        app:layout_constraintTop_toBottomOf="@id/route3_horizental"
        android:animateLayoutChanges="true"
        android:layout_marginTop="19sp">
        <ImageView
            android:id="@+id/ic_mark3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/car_mark"
            android:visibility="invisible"
            app:tint="@color/color_marker" />
    </LinearLayout>


    <TextView
        android:id="@+id/voie_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/veuillez_choisir_votre_chemin"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textview_guide"
        />


</androidx.constraintlayout.widget.ConstraintLayout>