<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/choose_image_source_bkg">
    
    
    <ImageView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_remove"
        android:layout_gravity="center|top"
        tools:ignore="contentDescription"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables"
        android:layout_marginTop="8dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/profilePictureChange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="photo de profil"
            android:textColor="@color/green_settings"
            android:gravity="center_horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/aldrich"
            android:textSize="18sp"
            android:layout_weight="2"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />

        <ImageView
            android:id="@+id/closeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            app:tint="@color/green_settings"
            android:layout_weight="1"
            tools:ignore="contentDescription"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="5dp"
        android:baselineAligned="false">



        <LinearLayout
        android:id="@+id/choosePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="contentDescription"
            app:tint="@color/green_settings"
            android:src="@drawable/ic_upload_photo"/>

        <TextView
            android:id="@+id/choosePhotoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:text="choisissez\nune image"
            android:textStyle="bold"
            android:fontFamily="@font/alegreya_sans"
            android:textColor="@color/green_settings"
            android:layout_marginStart="12dp"
            android:textSize="14sp" />



    </LinearLayout>

        <LinearLayout
            android:id="@+id/takePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_take_photo"
                tools:ignore="contentDescription"
                app:tint="@color/green_settings" />

            <TextView
                android:id="@+id/takePhotoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="prendre\nune photo"
                android:textStyle="bold"
                android:fontFamily="@font/alegreya_sans"
                android:textColor="@color/green_settings"
                android:layout_marginStart="12dp"
                android:textSize="14sp" />



        </LinearLayout>


    </LinearLayout>



</LinearLayout>